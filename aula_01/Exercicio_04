programa {
   funcao inicio() {
		inteiro numero1, numero2, numero3, numero4, diferenca
		
		escreva("Digite o primeiro numero para calcular a diferença: ")
		leia(numero1)

		escreva("Digite o segundo para calcular a diferença: ")
		leia(numero2)
                escreva("Digite o terceiro numero para calcular a diferença: ")
		leia(numero3)

	        escreva("Digite o quarto numero para calcular a diferença: ")
		leia(numero4)
		
		diferenca = ((numero1 * numero2) - (numero3 * numero4))
		
      escreva("A diferença entre os dois é: ", diferenca)
	    
	}
}
